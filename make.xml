<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE targets PUBLIC "-//RRLIB//DTD make 1.0" "http://rrlib.org/xml/1.0/make.dtd">
<targets>

  <rrlib>
    <sources>
      configuration/*
      messages/*
      sinks/tFile.cpp
      sinks/tStream.cpp
      configuration.cpp
      default_log_description.cpp
      messages.h
    </sources>
  </rrlib>

  <rrlib name="log_levels">
    <sources>
      log_levels.h
    </sources>
  </rrlib>
  
  <rrlib name="sinks">
    <sources>
      sinks/tSink.cpp
