<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE targets PUBLIC "-//RRLIB//DTD make 1.0" "http://rrlib.org/xml/1.0/make.dtd">
<targets>

  <rrlib name="logging"
        libs="rt">
    <sources>
      configuration/*.cpp
      messages/*.cpp
      sinks/tFile.cpp
      sinks/tStream.cpp
      configuration.cpp
      default_log_description.cpp
      messages.h
    </sources>
  </rrlib>

  <rrlib name="logging_log_levels">
    <sources>
      log_levels.h
    </sources>
  </rrlib>
  
  <rrlib name="logging_sinks">
    <sources>
      sinks/tSink.cpp
    </sources>
  </rrlib>

  <rrlib name="logging_sinks_speech_synthesis" optional="true">
    <sources>
      sinks/tSpeechSynthesis.cpp
    </sources>
  </rrlib>

  <testprogram name="messages">
    <sources>
      test/test_messages.cpp
      test/libA/*
      test/libB/*
    </sources>
  </testprogram>

</targets>
